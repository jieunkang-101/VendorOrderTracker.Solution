@{
    Layout = "_Layout";
}

<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Create a New Vendor</h1>
    </div>  
    <div class="card-body">
      <form action="/vendors" method="post">
        <label for="vendorName">Vendor Name</label>
        <input class="form-control" id="vendorName" name="name" type="text">
        <br>
        <label for="vendorDescription">Description</label>
        <textarea class="form-control" id="vendorDescription" name="description" type="text" placeholder="Vendor description..."></textarea>
        <br>
        <button class="btn" type="submit">Add Vendor</button>
      </form>
    </div>  
  </div>
</div>  