@using VendorOrderTracker.Models;
@{
    Layout = "_Layout";
}

<div class="container">
  <h3>Here are all the Orders for @Model["vendor"].Name:</h3>

  <ol>
    @foreach (Order order in @Model["orders"])
    {
      <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>@order.Title</a></li>
    }
  </ol>
  <br>
  <form action='/vendors/@Model["vendor"].Id/delete' method="post">
    <button class="btn btn-danger" type="submit">Delete this Vendor: @Model["vendor"].Name</button>
  </form>
  <hr>
  <a href='/vendors/@Model["vendor"].Id/orders/new'><button class="btn btn-primary">Add a New Order</button></a>
  <a href='/vendors'><button class="btn btn-primary">Return to Vendors List</button></a>
  <a href='/'><button class="btn btn-primary">Back Home</button></a>
</div>