@using VendorOrderTracker.Models;
@{
    Layout = "_Layout";
}

<div class="container">
  <h1>Vendors</h1>
  <hr>
  <br>

  @if (@Model.Count == 0)
  {
    <h3>No Vendors have been added yet!</h3>
  }
  
  @foreach (Vendor vendor in Model)
  {
    <div class="row">
      <div class="col-md-6">
        <div class="card">
          <div class="card-header">
            <h4>@vendor.Name</h4>
          </div>  
          <div class="card-body">
            <h5 class="card-title">Vendor Description: </h5>
            <p class="card-text">@vendor.Description</p>
            <a href="/vendors/@vendor.Id" class="btn btn-primary">View @vendor.Name's Order</a>
            
          </div>
        </div>  
      </div>
    </div>      
  }

  <hr>
  <a href='/vendors/new'><button class="btn btn-primary">Add a New Vendor</button></a>
  <a href='/'><button class="btn btn-primary">Back Home</button></a>
</div>