@using VendorOrderTracker.Models;
@{
    Layout = "_Layout";
}

<div class="container">
  <h1>Vendors</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Vendors have been added yet!</h3>
  }

  @foreach (Vendor vendor in Model)
  {
    <h3><a href="/vendors/@vendor.Id">@vendor.Name</a></h3>
  }

  <a href='/'><button class="btn btn-primary">Back Home</button></a>
</div>